        </activity>
        <activity
            android:name=".SignContractsWorkerActivity">
        </activity>
        <activity
            android:name=".ContractsWorkerActivity">
        </activity>
        <activity
            android:name=".OnDutyAdministratorActivity">
        </activity>
        <activity
            android:name=".OnDutyDetailActivity">
        </activity>
        <activity
            android:name=".BatteryAdministratorActivity">
        </activity>
        <activity
            android:name=".BatteryDetailActivity">
